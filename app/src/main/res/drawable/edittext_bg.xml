<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/input_bg_color" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#9f938d" />

    <!-- Rounded corners -->
    <corners android:radius="11dp" />

    <!-- Padding inside EditText -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
