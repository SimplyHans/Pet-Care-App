<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main">

    <!-- Inner rounded panel -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bk_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toTopOf="@id/bk_btn_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Progress dots -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="6dp">

                <View
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bk_dot_filled" />

                <View
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bk_dot_filled" />

                <View
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/bk_dot_empty" />
            </LinearLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/bk_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="When do you want to
schedule your appointment?"
                android:textColor="@color/bk_text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Day field -->
            <LinearLayout
                android:id="@+id/bk_day_field"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bk_item_bg"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <EditText
                    android:id="@+id/bk_input_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Day"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/bk_text_dark"
                    android:textColorHint="#9F8F89" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <!-- Time field -->
            <LinearLayout
                android:id="@+id/bk_time_field"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bk_item_bg"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <EditText
                    android:id="@+id/bk_input_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Time here"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/bk_text_dark"
                    android:textColorHint="#9F8F89" />
            </LinearLayout>


        </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bk_btn_continue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bk_continue"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/secondary"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
