<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/main"
    android:clipToOutline="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Left side: Time, Day, Icon -->
        <LinearLayout
            android:id="@+id/leftContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/book_icon"
                app:tint="@color/secondary"
                android:contentDescription="Appointment Icon" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:30 AM"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/secondary"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="October 31"
                android:textSize="12sp"
                android:textColor="@color/secondary"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Right side: Doctor name and description -->
        <LinearLayout
            android:id="@+id/rightContainer"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            app:layout_constraintStart_toEndOf="@id/leftContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tagsContainer">

            <TextView
                android:id="@+id/notisTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Casilao"
                android:textColor="@color/secondary"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Info: No extra information provided"
                android:textColor="@color/secondary"
                android:textSize="10sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Bottom: Tags -->
        <LinearLayout
            android:id="@+id/tagsContainer"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/leftContainer"
            app:layout_constraintTop_toBottomOf="@id/rightContainer"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/tagType"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/secondary"
                android:padding="8sp"
                android:text="Dog"
                android:textColor="@android:color/white"
                android:textSize="8sp" />

            <Button
                android:id="@+id/tagApoint"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="8sp"
                android:backgroundTint="#86FFAA"
                android:text="Video"
                android:textColor="#554947"
                android:textSize="8sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
