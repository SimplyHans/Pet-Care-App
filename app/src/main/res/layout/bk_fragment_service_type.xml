<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_surface">

    <!-- Header include -->
    <include
        android:id="@+id/header"
        layout="@layout/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Inner rounded panel -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bk_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/bk_panel"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@+id/bk_btn_continue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Progress dots -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="6dp">

                <View
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bk_dot_filled" />

                <View
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bk_dot_filled" />

                <View
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bk_avatar_bg" />

            </LinearLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/bk_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="What type of pet service are you looking for?"
                android:textColor="@color/bk_text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- breathing space like the mock -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!-- Two selectable 'card buttons' -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Services (button styled like your sample) -->

                <!-- Vets -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/card_services"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="4dp"
                    android:backgroundTint="#D57E5F"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="Services"
                    android:textAllCaps="false"
                    android:textColor="@color/bk_text_dark"
                    android:textStyle="bold"
                    app:cornerRadius="15dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/card_vets"
                    android:layout_width="130dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="4dp"
                    android:backgroundTint="#D57E5F"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="Vets"
                    android:textAllCaps="false"
                    android:textColor="@color/bk_text_dark"
                    android:textStyle="bold"
                    app:cornerRadius="15dp" />

            </LinearLayout>

            <!-- Push content up to keep air above the button -->
            <Space
                android:layout_width="346dp"
                android:layout_height="172dp"
                android:layout_weight="1" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Continue button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bk_btn_continue"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="12dp"
        android:text="@string/bk_continue"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="24dp"
        app:backgroundTint="@color/bk_brown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nav"/>

    <include
        android:id="@+id/nav"
        layout="@layout/navbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
