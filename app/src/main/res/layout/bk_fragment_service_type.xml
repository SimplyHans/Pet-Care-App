<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main">

    <!-- Inner panel -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bk_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bk_btn_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Progress dots -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="6dp">

                <View
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bk_dot_filled" />

                <View
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bk_dot_filled" />

                <View
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bk_dot_filled" />
            </LinearLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/bk_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="What type of pet service are you looking for?"
                android:textColor="@color/bk_text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- breathing space -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bk_service_walking"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Walking"
                    android:textAllCaps="false"
                    android:textColor="@color/bk_text_dark"
                    android:textStyle="bold"
                    app:backgroundTint="#D57E5F"
                    app:cornerRadius="15dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bk_service_grooming"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Grooming"
                    android:textAllCaps="false"
                    android:textColor="@color/bk_text_dark"
                    android:textStyle="bold"
                    app:backgroundTint="#D57E5F"
                    app:cornerRadius="15dp" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bk_service_vet"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Vet Visit"
                    android:textAllCaps="false"
                    android:textColor="@color/bk_text_dark"
                    android:textStyle="bold"
                    app:backgroundTint="#D57E5F"
                    app:cornerRadius="15dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bk_service_boarding"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Boarding"
                    android:textAllCaps="false"
                    android:textColor="@color/bk_text_dark"
                    android:textStyle="bold"
                    app:backgroundTint="#D57E5F"
                    app:cornerRadius="15dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bk_btn_continue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bk_continue"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/secondary"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
