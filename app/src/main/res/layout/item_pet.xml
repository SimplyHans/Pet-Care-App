<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_pet_item"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="21.6dp"
        app:cardBackgroundColor="#403933"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp">

        <TextView
            android:id="@+id/text_pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Name"
            android:textColor="@android:color/white"
            android:textSize="16.8sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_pet_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breed"
            android:textColor="@android:color/white"
            android:textSize="14.4sp"
            android:layout_marginTop="2.4dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_pet_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: 0"
            android:textColor="@android:color/white"
            android:textSize="14.4sp"
        android:layout_marginTop="2.4dp"
        android:gravity="center" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
