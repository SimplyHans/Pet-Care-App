<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8CCC8"
    tools:context=".PetListFragment">

    <include
        android:id="@+id/header"
        layout="@layout/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pet_buttons_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#EDE5E1"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Add Pet Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_AddPet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Add Pet"
                android:textSize="25sp"
                app:backgroundTint="#403933"
                app:cornerRadius="24dp"
                app:icon="@drawable/plus"
                app:iconGravity="textStart"
                app:iconPadding="15dp"
                app:iconSize="35dp" />

            <!-- Row 1 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_pet02"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Bud\nBreed: Golden Retriever\nAge: 4"
                    android:gravity="center"
                    android:singleLine="false"
                    android:ellipsize="none"
                    app:backgroundTint="#AE37D1"
                    app:cornerRadius="24dp"
                    app:iconSize="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button_pet01"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_pet01"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Fido\nBreed: Husky\nAge: 2"
                    android:gravity="center"
                    android:singleLine="false"
                    android:ellipsize="none"
                    app:backgroundTint="#5C96DB"
                    app:cornerRadius="24dp"
                    app:iconSize="30dp"
                    app:layout_constraintStart_toEndOf="@id/button_pet02"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Row 2 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_pet03"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Cleo\nBreed: Siamese\nAge: 10"
                    android:gravity="center"
                    android:singleLine="false"
                    android:ellipsize="none"
                    app:backgroundTint="#B86F31"
                    app:cornerRadius="24dp"
                    app:iconSize="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button_pet04"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_pet04"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Spot\nBreed: Dalmatian\nAge: 5"
                    android:gravity="center"
                    android:singleLine="false"
                    android:ellipsize="none"
                    app:backgroundTint="#E26488"
                    app:cornerRadius="24dp"
                    app:iconSize="30dp"
                    app:layout_constraintStart_toEndOf="@id/button_pet03"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
