<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">

    <View
        android:id="@+id/topBorder"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/dark_main"
        app:layout_constraintBottom_toTopOf="@id/viewBG"
        app:layout_constraintStart_toStartOf="@id/viewBG"
        app:layout_constraintEnd_toEndOf="@id/viewBG" />

    <!-- Background Bar -->
    <View
        android:id="@+id/viewBG"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="@color/main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- HOME TAB -->
    <ImageButton
        android:id="@+id/homeTab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="0dp"
        android:adjustViewBounds="true"
        android:maxWidth="36dp"
        android:maxHeight="36dp"
        android:background="@android:color/transparent"
        android:src="@drawable/home_icon"
        android:contentDescription="Home"
        android:scaleType="centerInside"
        app:tint="@color/dark_main"
        app:layout_constraintBottom_toBottomOf="@+id/viewBG"
        app:layout_constraintTop_toTopOf="@+id/viewBG"
        app:layout_constraintStart_toStartOf="@+id/viewBG"
        app:layout_constraintEnd_toStartOf="@+id/bookTab" />

    <!-- BOOK TAB -->
    <ImageButton
        android:id="@+id/bookTab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="Book"
        android:maxWidth="48dp"
        android:maxHeight="100dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/book_icon"
        app:layout_constraintBottom_toBottomOf="@+id/viewBG"
        app:layout_constraintEnd_toEndOf="@+id/viewBG"
        app:layout_constraintStart_toStartOf="@+id/viewBG"
        app:layout_constraintTop_toTopOf="@+id/viewBG"
        app:tint="@color/dark_main" />

    <!-- PETS TAB -->
    <ImageButton
        android:id="@+id/petsTab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="0dp"
        android:adjustViewBounds="true"
        android:maxWidth="36dp"
        android:maxHeight="36dp"
        android:background="@android:color/transparent"
        android:src="@drawable/pet_icon"
        android:contentDescription="Pets"
        android:scaleType="centerInside"
        app:tint="@color/dark_main"
        app:layout_constraintBottom_toBottomOf="@+id/viewBG"
        app:layout_constraintTop_toTopOf="@+id/viewBG"
        app:layout_constraintStart_toEndOf="@+id/bookTab"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
