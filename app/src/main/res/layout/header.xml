<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8CCC8">

    <!-- Top Rounded Background -->
    <View
        android:id="@+id/viewBG_top"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@drawable/rounded_header_bg"
        android:backgroundTint="@color/secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/viewBG_top"
        app:layout_constraintStart_toStartOf="@+id/viewBG_top"
        app:layout_constraintTop_toTopOf="@+id/viewBG_top"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Notifications: brown circle container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/notisBtn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:cardCornerRadius="21dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false"
        app:strokeWidth="0dp"
        app:cardElevation="0dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@+id/viewBG_top"
        app:layout_constraintBottom_toBottomOf="@+id/viewBG_top"
        app:layout_constraintEnd_toStartOf="@+id/settingsBtn"
        android:layout_marginEnd="8dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/bk_ic_bell"
            app:tint="@color/secondary"
            android:contentDescription="Notifications" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Settings: brown circle container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/settingsBtn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:cardCornerRadius="21dp"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false"
        app:strokeWidth="0dp"
        app:cardElevation="0dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@+id/viewBG_top"
        app:layout_constraintBottom_toBottomOf="@+id/viewBG_top"
        app:layout_constraintEnd_toEndOf="@+id/viewBG_top"
        android:layout_marginEnd="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:contentDescription="Settings"
            android:src="@drawable/bk_ic_settings"
            app:tint="@color/secondary" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
